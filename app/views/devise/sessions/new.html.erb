<div class="container">
  <div class="container-log-in">


<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label: 'E-mail', placeholder: "Votre adresse e-mail",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: 'Mot de passe', placeholder: "Mot de passe",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: 'Se souvenir', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <button class="button type1"><%= f.button :submit, 'Valider', class: 'border-top-color' %> </button>

  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
