<div class="actu-container">
  <%= image_tag 'banner3.jpg' %>
</div>
<div class="actu-index-container">
  <div class="container">


  <div class="navigation">
  <%= link_to "Accueil", '/' %>  <% if user_signed_in? %> / <%= link_to 'Ajouter une publication', new_actualite_path  %> <% end %>

  </div>

  <div data-aos="fade-left"
    data-aos-offset="400"
    data-aos-delay="5000"
    data-aos-duration="1000"
    data-aos-easing="ease-in-out"
    data-aos-once="true" class="text-center">

  <h1>Nos dernières actualités</h1>
  <%= image_tag 'quote.svg' %>
  </div>

  <div class="container" data-aos="fade-up-left"
    data-aos-offset="200"
    data-aos-delay="500"
    data-aos-duration="1000"
    data-aos-easing="ease-in-out"
    data-aos-once="true">
    <% @actualites.each do |actualite| %>
  <div class="row">
    <div class="col-xs-12 col-md-3 date-border">
      <div class="date"><%= actualite.day %></div>
      <span class="month"><%= actualite.month %></span> <br>
      <span class="year"><%= actualite.year %></span>
    </div>
    <div class="col-xs-12 col-md-9 article-border article-position">
      <h2><%= actualite.title %></h2>
      <h6>Ecrit par : <%= actualite.auteur %></h6>
      <p><%= actualite.contenu %></p>
      <%= link_to "Lire la suite", actualite_path(actualite)  %>
    </div>
  </div>
  <% end %>
  </div>


</div>

</div>

<script>
    AOS.init();
  </script>

